<h1>@Model["stylist"].GetName()</h1>

<h2>Add Client</h2>
<form action="/clients/@Model["stylist"].GetId()" method="post">
  <label for="name">Name</label>
  <input type="text" name="name">
  <input  type="hidden" name="stylist-id" value="@Model["stylist"].GetId()">
  <button type="submit" name="button">Add</button>
</form>

<h2>Current Clients</h2>

@if (Model["clients"].Count == 0)
{
  <h3>There are no clients yet</h3>
}
else
{
  <ol>
  @foreach(var client in Model["clients"])
  {
    <h3><li>Client: @client.GetName()</li></h3>
  }
  </ol>
}

<a href="/">Return home</a>
