<h1>Hair Salon App</h1>

<h4>Add a new Stylist below</h4>

<form action="/stylist/new" method="post">
  <label for="stylist-name">Stylist name</label>
  <input name="stylist-name" type="text">
  <button type="submit">Add</button>
</form>

@if (Model.Count != 0)
{
  foreach(var stylist in Model)
  {
    <h3>Stylist: @stylist.GetName()</h3>
    <a href="/clients/@stylist.GetId()">Stylist: @stylist.GetName() | <a href="/stylist/edit/@stylist.GetId()">Edit</a> | <a href="/stylist/delete/@stylist.GetId()">Delete</a></a>

  }
}
